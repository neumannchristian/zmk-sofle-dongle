    macros {
        iso_tilde: sep_tilde {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&kp LA(N) &kp SPACE>;
            label = "SEP_TILDE";
        };

        iso_grave: iso_grave {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&kp LS(EQUAL) &kp SPACE>;
            label = "ISO_GRAVE";
        };

        iso_caret: iso_caret {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&kp LS(LA(NUMBER_6)) &kp SPACE>;
            label = "ISO_CARET";
        };
    };

    keymap {
        compatible = "zmk,keymap";

        querty {
            bindings = <
&kp ESC                           &kp N1                 &kp N2             &kp N3             &kp N4               &kp N5       &kp UP_ARROW     &kp N6     &kp N7                &kp N8              &kp N9              &kp N0                     &kp MINUS
&kp TAB                           &kp Q                  &kp W              &kp E              &kp R                &kp T        &kp DOWN_ARROW   &kp Y      &kp U                 &kp I               &kp O               &kp P                      &kp LEFT_BRACKET
&hrm_l LEFT_SHIFT GRAVE           &hrm_l LEFT_CONTROL A  &hrm_l LEFT_ALT S  &hrm_l LEFT_GUI D  &hrm_l LEFT_SHIFT F  &kp G        &kp LEFT_ARROW   &kp H      &hrm_r RIGHT_SHIFT J  &hrm_r RIGHT_GUI K  &hrm_r RIGHT_ALT L  &hrm_r RIGHT_CONTROL SEMI  &hrm_r RIGHT_SHIFT APOS
&hrm_l LEFT_CONTROL LEFT_BRACKET  &kp Z                  &kp X              &kp C              &kp V                &kp B        &kp RIGHT_ARROW  &kp N      &kp M                 &kp COMMA           &kp DOT             &kp FSLH                   &hrm_r RIGHT_CONTROL BACKSLASH
&kp C_MUTE                        &kp LEFT_CONTROL       &kp LEFT_GUI       &mo 5              &kp LEFT_ALT         &kp SPACE    &kp ENTER        &kp SPACE  &kp ENTER             &mo 6               &kp BACKSPACE       &kp RIGHT_SHIFT
            >;

            sensor-bindings = <&inc_dec_kp C_VOLUME_UP C_VOL_DN>;
            display-name = " ";
            label = "q";
        };

        game {
            display-name = "game";
            bindings = <
&kp ESC           &kp N1     &kp N2        &kp N3  &kp N4        &kp N5       &kp UP_ARROW     &kp N6     &kp N7     &kp N8     &kp N9           &kp N0         &kp MINUS
&kp TAB           &kp Q      &kp W         &kp E   &kp R         &kp T        &kp DOWN_ARROW   &kp Y      &kp U      &kp I      &kp O            &kp P          &kp BSLH
&kp LEFT_SHIFT    &kp A      &kp S         &kp D   &kp F         &kp G        &kp LEFT_ARROW   &kp H      &kp J      &kp K      &kp L            &kp SEMI       &kp APOS
&kp LEFT_CONTROL  &kp Z      &kp X         &kp C   &kp V         &kp B        &kp RIGHT_ARROW  &kp N      &kp M      &kp COMMA  &kp DOT          &kp FSLH       &kp ENTER
&kp C_MUTE        &kp LCTRL  &kp LEFT_GUI  &mo 5   &kp LEFT_ALT  &kp SPACE    &kp ENTER        &kp SPACE  &kp ENTER  &mo 6      &kp RIGHT_SHIFT  &kp BACKSPACE
            >;

            sensor-bindings = <&inc_dec_kp C_VOLUME_UP C_VOL_DN>;
        };

        mine {
            bindings = <
&trans  &trans          &trans             &trans             &trans               &trans      &trans  &trans  &trans                &trans              &trans              &trans          &trans
&trans  &kp J           &kp L              &kp U              &kp A                &kp Q       &trans  &kp W   &kp B                 &kp D               &kp G               &kp Z           &kp Y
&trans  &hrm_l LCTRL C  &hrm_l LEFT_ALT R  &hrm_l LEFT_GUI I  &hrm_l LEFT_SHIFT E  &kp O       &trans  &kp M   &hrm_r RIGHT_SHIFT N  &hrm_r RIGHT_GUI T  &hrm_r RIGHT_ALT S  &hrm_r RCTRL H  &trans
&trans  &kp V           &kp X              &kp LBKT           &kp APOS             &kp SEMI    &trans  &kp P   &kp F                 &kp COMMA           &kp DOT             &kp K           &trans
&trans  &trans          &trans             &mo 5              &mo 4                &trans      &trans  &trans  &trans                &trans              &trans              &trans
            >;

            label = "mine";
        };

        noted {
            label = "noted";
            bindings = <
&trans  &trans          &trans             &trans             &trans               &trans      &trans  &trans  &trans                &trans              &trans              &trans          &trans
&trans  &kp Y           &kp Z              &kp U              &kp A                &kp Q       &trans  &kp P   &kp B                 &kp M               &kp L               &kp F           &kp J
&trans  &hrm_l LCTRL C  &hrm_l LEFT_ALT S  &hrm_l LEFT_GUI I  &hrm_l LEFT_SHIFT E  &kp O       &trans  &kp D   &hrm_r RIGHT_SHIFT T  &hrm_r RIGHT_GUI N  &hrm_r RIGHT_ALT R  &hrm_r RCTRL H  &trans
&trans  &kp V           &kp X              &kp LBKT           &kp APOS             &kp SEMI    &trans  &kp W   &kp G                 &kp COMMA           &kp DOT             &kp K           &trans
&trans  &trans          &trans             &mo 5              &mo 4                &trans      &trans  &trans  &trans                &trans              &trans              &trans
            >;
        };

        m_sym {
            bindings = <
&trans  &trans          &trans            &trans      &trans            &trans                 &trans  &trans            &trans      &trans             &trans            &trans            &trans
&trans  &kp LA(PERIOD)  &kp LS(SLASH)     &kp LA(N5)  &kp LA(NUMBER_6)  &iso_caret             &trans  &kp RS(NUMBER_1)  &kp GRAVE   &kp LS(GRAVE)      &kp LS(N0)        &kp RS(NUMBER_6)  &kp RA(L)
&trans  &kp LS(LA(N7))  &kp LS(N7)        &kp LA(N8)  &kp LA(N9)        &kp LS(RIGHT_BRACE)    &trans  &kp RS(MINUS)     &kp RS(N8)  &kp RS(N9)         &kp SLASH         &kp RS(PERIOD)    &trans
&trans  &kp BACKSLASH   &kp LS(NUMBER_4)  &kp LA(N7)  &iso_tilde        &iso_grave             &trans  &kp RIGHT_BRACE   &kp RS(N5)  &kp RS(BACKSLASH)  &kp RS(NUMBER_2)  &kp RS(COMMA)     &trans
&trans  &trans          &trans            &trans      &trans            &trans                 &trans  &trans            &trans      &trans             &trans            &trans
            >;

            label = "sym";
