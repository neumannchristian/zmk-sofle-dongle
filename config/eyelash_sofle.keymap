        para_right {
            bindings = <&kp RIGHT_PARENTHESIS>;
            key-positions = <34 36>;
            require-prior-idle-ms = <150>;
            layers = <0>;
            timeout-ms = <18>;
        };

        l_bracket {
            bindings = <&kp LEFT_BRACKET>;
            key-positions = <43 41>;
            require-prior-idle-ms = <150>;
            layers = <0>;
            timeout-ms = <18>;
        };

        r_bracket {
            bindings = <&kp RIGHT_BRACKET>;
            key-positions = <49 47>;
            require-prior-idle-ms = <150>;
            layers = <0>;
            timeout-ms = <18>;
        };

        at {
            bindings = <&kp AT>;
            key-positions = <15 28>;
            layers = <0>;
            require-prior-idle-ms = <50>;
            timeout-ms = <30>;
